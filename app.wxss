@import './assets/style/weui.wxss';
@import './assets/style/style.wxss';


page{
    background-color: #FCFCFC;
    font-size: 32rpx;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 80rpx;
}
.page__bd {
    padding-bottom: 80rpx;
}
.page__bd_spacing {
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.page__ft{
    padding-bottom: 20rpx;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 4rpx;
    font-weight: 400;
}

.page__desc {
    margin-top: 10rpx;
    color: #888888;
    text-align: left;
    font-size: 24rpx;
    background-color: white;
}
.weui-cells::after {
  border:none;
}
.weui-cells::before {
  border:none;
}
.weui-cell::before {
  right:15px;
}
.weui-textarea{
  height:160rpx;
}
.btn-group{
  margin:0 20rpx;
}